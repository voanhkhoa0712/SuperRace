<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/loginCard"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor">

    <LinearLayout
        style="@style/linearParent"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin">

        <TextView
            style="@style/headerTextPrimary"
            android:text="@string/add_event"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/addevent_title"
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Title"/>
        </LinearLayout>


        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/addevent_description"
                style="@style/modifiedEditText"
                android:hint="Description"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/addevent_startdate"
                style="@style/modifiedEditText"
                android:maxLines="1"
                android:hint="Start-date (YYYY-MM-DD)"/>
        </LinearLayout>


        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/addevent_enddate"
                style="@style/modifiedEditText"
                android:hint="End-date (YYYY-MM-DD)"
                android:maxLines="1"/>
        </LinearLayout>


        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/addevent_milestone"
                style="@style/modifiedEditText"
                android:hint="Milestone"
                android:maxLines="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/registerMess"
            style="@style/parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/errorMessageColor"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/addButton"
            style="@style/loginButton"
            android:layout_gravity="center"
            android:text="ADD"
            android:layout_marginTop="20dp"/>


    </LinearLayout>
</LinearLayout>
