<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/loginCard"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor">

    <LinearLayout
        style="@style/linearParent"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin">

        <TextView
            style="@style/headerTextPrimary"
            android:text="@string/register"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/registerName"
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="User Name"/>
        </LinearLayout>


        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/registerEmail"
                style="@style/modifiedEditText"
                android:hint="Email"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/registerPass"
                style="@style/modifiedEditText"
                android:inputType="textPassword"
                android:maxLines="1"
                android:hint="Password"/>
        </LinearLayout>


        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/registerFirstName"
                style="@style/modifiedEditText"
                android:hint="First Name"
                android:maxLines="1"/>
        </LinearLayout>


        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/registerLastName"
                style="@style/modifiedEditText"
                android:hint="Last Name"
                android:maxLines="1"/>
        </LinearLayout>


        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/registerDOB"
                style="@style/modifiedEditText"
                android:hint="Day of Birth (YYYY-MM-DD)"
                android:maxLines="1"/>
        </LinearLayout>


        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/registerWeight"
                style="@style/modifiedEditText"
                android:hint="Weight"
                android:maxLines="1"/>
        </LinearLayout>


        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/registerHeight"
                style="@style/modifiedEditText"
                android:hint="Height"
                android:maxLines="1"/>
        </LinearLayout>


        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/registerGender"
                style="@style/modifiedEditText"
                android:hint="Gender (Male/Female)"
                android:maxLines="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/registerMess"
            style="@style/parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/errorMessageColor"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

        <Button
            android:id="@+id/registerButton"
            style="@style/loginButton"
            android:layout_gravity="center"
            android:text="Register"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/hintToLogin"
            style="@style/parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/themeColorDark"
            android:text="@string/signup_login_hint"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

    </LinearLayout>
</LinearLayout>
